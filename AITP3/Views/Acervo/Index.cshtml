@model IEnumerable<AITP3.Models.Livro>

@{
    ViewBag.Title = "Acervo";
}
<style>


    .card {
        border: none;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .text-muted {
        font-size: 0.9rem;
        margin-bottom: 0.2rem;
    }

    .font-weight-bold {
        font-size: 1.1rem;
    }

    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

</style>
<div class="container mt-5">
    <h2 class="text-black text-center mb-4">Acervo</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var livro in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-black">@livro.Titulo</h5>
                        <p class="text-muted mb-1"><strong>Categoria:</strong> @livro.Categoria.Nome</p>
                        <p class="text-muted mb-1"><strong>Autor:</strong> @livro.Autor</p>
                        <p class="text-muted mb-1"><strong>Editora:</strong> @livro.Editora</p>
                        <p class="text-muted mb-1"><strong>ISBN:</strong> @livro.ISBN</p>
                        <p class="text-muted mb-3"><strong>Ano de Publicação:</strong> @livro.AnoPublicacao</p>
                        <p class="font-weight-bold text-success">@livro.Valor.ToString("C")</p>

                        <div class="mt-auto">
                            @using (Html.BeginForm("AddToCart", "Acervo", new { id = livro.Id }, FormMethod.Post))
                            {
                                <button type="submit" class="btn btn-outline-primary w-100">Adicionar ao Carrinho</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
