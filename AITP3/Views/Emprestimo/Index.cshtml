@model IEnumerable<AITP3.Models.Emprestimo>

@{
    ViewBag.Title = "Meus Empréstimos";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between mb-4">
        <h2 class="text-black">Meus Empréstimos</h2>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row text-center">
            @* Centraliza o conteúdo *@
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-4 d-flex justify-content-center">
                    @* Adiciona flex para centralizar cada card *@
                    <div class="card shadow-sm border-0" style="width: 100%;">
                        @* Define a largura do card para 100% *@
                        <div class="card-body">
                            <h5 class="card-title">Empréstimo de @item.DataEmprestimo.ToString("dd/MM/yyyy")</h5>
                            <p class="card-text"><strong>Data de Devolução:</strong> @item.DataDevolucao.ToString("dd/MM/yyyy")</p>
                            <p class="card-text"><strong>Valor Total:</strong> @item.ValorTotal.ToString("C")</p>
                            <p class="card-text"><strong>Livros:</strong></p>
                            <ul class="list-unstyled">
                                @foreach (var emprestimoLivro in item.EmprestimoLivros)
                                {
                                    <li>@emprestimoLivro.Livro.Titulo - @emprestimoLivro.Livro.Autor</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">Nenhum empréstimo encontrado.</div>
    }
</div>
