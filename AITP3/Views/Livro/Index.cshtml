@model IEnumerable<AITP3.Models.Livro>

@{
    ViewBag.Title = "Lista de Livros";
}
<style>
    .row-cols-md-2 .col {
        display: flex;
    }

    .card {
        width: 100%;
        margin-bottom: 20px;
    }

    .card-body {
        font-size: 0.9rem;
    }

    .card-footer {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .card-title {
        font-size: 1.25rem;
    }
</style>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-black">Lista de Livros</h2>
        @Html.ActionLink("Adicionar Novo Livro", "Create", null, new { @class = "btn btn-success" })
    </div>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-black">@Html.DisplayFor(modelItem => item.Titulo)</h5>
                        <p class="card-text"><strong>Categoria:</strong> @Html.DisplayFor(modelItem => item.Categoria.Nome)</p>
                        <p class="card-text"><strong>Autor:</strong> @Html.DisplayFor(modelItem => item.Autor)</p>
                        <p class="card-text"><strong>Editora:</strong> @Html.DisplayFor(modelItem => item.Editora)</p>
                        <p class="card-text"><strong>ISBN:</strong> @Html.DisplayFor(modelItem => item.ISBN)</p>
                        <p class="card-text"><strong>Ano de Publicação:</strong> @Html.DisplayFor(modelItem => item.AnoPublicacao)</p>
                        <p class="card-text"><strong>Valor:</strong> @Html.DisplayFor(modelItem => item.Valor)</p>
                    </div>
                    <div class="card-footer text-center">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info mx-1" })
                        @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
